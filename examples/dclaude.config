#!/bin/bash
# Example dclaude configuration file
# Copy to ~/.dclaude/config and customize

# Docker image tag to use (default: latest)
# DCLAUDE_TAG=latest

# Enable debug output (default: false)
# DCLAUDE_DEBUG=false

# Docker socket path (default: /var/run/docker.sock)
# DCLAUDE_DOCKER_SOCKET=/var/run/docker.sock

# Network mode (default: auto-detected based on platform capabilities)
# Options: auto (default), host, bridge
# - auto: Automatically detect best available networking mode
# - host: Force host networking (full localhost access, requires platform support)
# - bridge: Force bridge networking (limited localhost access, use host.docker.internal)
# DCLAUDE_NETWORK=auto

# Claude model to use (passed to Claude CLI)
# CLAUDE_MODEL=claude-3-opus

# Custom Docker registry (for private registries)
# DCLAUDE_REGISTRY=docker.io

# Additional Docker run flags (advanced users)
# DCLAUDE_DOCKER_FLAGS="--memory=2g --cpus=2"

# Auto-update policy (always/daily/never)
# DCLAUDE_AUTO_UPDATE=daily

# Volume name prefix (default: dclaude)
# DCLAUDE_VOLUME_PREFIX=dclaude

# Color output (true/false/auto)
# DCLAUDE_COLOR=auto